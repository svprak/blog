
<% if @article.errors.any? %>
<h3>Errors attension needed</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label "Title" %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label "Description" %>  <br>
    <%= f.text_area :description, class: "form-control" %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>
